
test:	{ my @t = <*.t>;
	  s/\.t$/.ok/ foreach @t;
	  @t;
	}

%.ok:	%.out %.out.exp
	diff $DEP0 $DEP1 > $TARGET

%.out:
	{ my ($maker, $target, $deps, $matches) = @_;
	  my $dbg = $ENV{DEBUG} ? '-d ' : '';
	  system "$^X $dbg-I../../blib/lib $matches->[0].t 2>&1 | egrep . | grep -v Gress.pm | grep -v Maker.pm > $target";
	}

